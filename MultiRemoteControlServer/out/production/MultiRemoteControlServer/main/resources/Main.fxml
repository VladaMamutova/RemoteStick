<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.kotlin.MainController"
          orientation="VERTICAL">
    <padding>
        <Insets top="15" bottom="15" right="15" left="15" />
    </padding>

    <GridPane hgap="7">

        <Label text="Сетевое имя ПК:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <Label fx:id="pcName" text="undefined"
               GridPane.columnIndex="1" GridPane.rowIndex="0">
         </Label>

        <Button text="Click!" onAction="#click" fx:id="btn"
                GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets top="20"/>
            </GridPane.margin>
        </Button>

    </GridPane>

</FlowPane>
