<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>

<FlowPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.kotlin.MainController"
          orientation="VERTICAL">
    <padding>
        <Insets top="15" bottom="15" right="15" left="15" />
    </padding>

    <GridPane hgap="7">

        <Label text="Имя компьютера:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>

        <Label fx:id="name"
               text="undefined"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"/>

        <Label text="IP-адрес:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>

        <Label fx:id="ipAddress"
               text="undefined"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

        <Button fx:id="btn"
                text="Click!"
                onAction="#click"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets top="20"/>
            </GridPane.margin>
        </Button>

    </GridPane>

</FlowPane>
