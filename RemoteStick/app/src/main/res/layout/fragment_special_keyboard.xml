<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragments.SpecialKeyboardFragment"
            android:orientation="horizontal"
            android:columnCount="6"
            android:paddingStart="@dimen/medium_intent"
            android:paddingEnd="@dimen/medium_intent">

        <Button android:id="@+id/escButton"
                style="@style/SpecialKeyButton"
                android:text="@string/esc"/>

        <Button android:id="@+id/insertButton"
                style="@style/SpecialKeyButton"
                android:text="@string/insert"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="←"
                custom:additionActionText="F1"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="/"
                custom:additionActionText="F2"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="*"
                custom:additionActionText="F3"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="@string/minus_symbol"/>

        <Button android:id="@+id/tabButton"
                style="@style/SpecialKeyButton"
                android:text="@string/tab"/>

        <Button android:id="@+id/deleteButton"
                style="@style/SpecialKeyButton"
                android:text="@string/delete"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="7"
                custom:additionActionText="F4"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="8"
                custom:additionActionText="F5"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="9"
                custom:additionActionText="F6"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="@string/plus_symbol"/>

        <ImageButton android:id="@+id/desktopButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_desktop"
                     android:contentDescription="@string/show_desktop_button_description"/>

        <Button android:id="@+id/printScreenButton"
                style="@style/SpecialKeyButton"
                android:text="@string/prt_sc"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="4"
                custom:additionActionText="F7"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="5"
                custom:additionActionText="F8"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="6"
                custom:additionActionText="F9"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="@string/equal_symbol"/>

        <ImageButton android:id="@+id/copyButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_copy"
                     android:contentDescription="@string/copy_button_description"/>

        <ImageButton android:id="@+id/pasteButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_paste"
                     android:contentDescription="@string/paste_button_description"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="1"
                custom:additionActionText="F10"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="2"
                custom:additionActionText="F11"/>

        <ru.vladamamutova.remotestick.ui.custom.ButtonDoubleAction
                style="@style/SpecialKeyButton"
                custom:mainActionText="3"
                custom:additionActionText="F12"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="@string/zero_symbol"/>

        <Button android:id="@+id/homeButton"
                style="@style/SpecialKeyButton"
                android:text="@string/home"/>

        <Button android:id="@+id/pageUpButton"
                style="@style/SpecialKeyButton"
                android:text="@string/pg_up"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="Fn-N"/>

        <ImageButton android:id="@+id/arrowUpButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_arrow_up"
                     android:contentDescription="@string/arrow_up_button_description"/>

        <Button
                style="@style/SpecialKeyButton"
                android:text="@string/dot_symbol"/>

        <Button android:id="@+id/enterButton"
                style="@style/SpecialKeyButton"
                android:text="@string/enter"
                android:layout_gravity="fill"
                android:layout_rowSpan="2"/>

        <Button android:id="@+id/endButton"
                style="@style/SpecialKeyButton"
                android:text="@string/end"/>

        <Button android:id="@+id/pageDownButton"
                style="@style/SpecialKeyButton"
                android:text="@string/pg_dn"/>

        <ImageButton android:id="@+id/arrowLeftButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_arrow_left"
                     android:contentDescription="@string/arrow_left_button_description"/>

        <ImageButton android:id="@+id/arrowDownButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_arrow_down"
                     android:contentDescription="@string/arrow_down_button_description"/>

        <ImageButton android:id="@+id/arrowRightButton"
                     style="@style/SpecialKeyButton"
                     android:src="@drawable/ic_arrow_right"
                     android:contentDescription="@string/arrow_right_button_description"/>

</GridLayout>
