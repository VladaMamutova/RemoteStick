<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIconTint">@color/grey</item>
        <item name="tabBackground">@drawable/tab_icon_background</item>
        <item name="android:theme">@style/UnselectableItemTheme</item>
    </style>

    <!--Тема для элементов, у которых нет эффекта пульсации при касании-->
    <style name="UnselectableItemTheme">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="SpecialKeyButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item> <!--Убираем отступы кнопки по умолчанию-->
        <item name="android:layout_margin">@dimen/tiny_intent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:padding">@dimen/small_intent</item>
        <item name="android:background">@drawable/special_key_background</item>
        <item name="android:textColor">@color/special_key_color</item>
        <item name="android:tint">@color/special_key_color</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BrowserKeyButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/tab_layout_height</item>
        <item name="android:minWidth">0dp</item> <!--Убираем отступы кнопки по умолчанию-->
        <item name="android:layout_margin">@dimen/tiny_intent</item>
        <item name="android:padding">@dimen/small_intent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/darkText</item>
    </style>
</resources>
