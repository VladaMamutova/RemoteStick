<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="-45"
                              android:startColor="@color/colorPrimary"
                              android:centerColor="@color/colorPrimaryDark"
                              android:endColor="@color/colorPrimaryDark"/>
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:top="1dp"
                  android:right="2dp"
                  android:bottom="2dp"
                  android:left="1dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/colorPrimary"/>
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="-45"
                              android:startColor="@color/lightGrey"
                              android:centerColor="@color/grey"
                              android:endColor="@color/grey"/>
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:top="1dp"
                  android:right="2dp"
                  android:bottom="2dp"
                  android:left="1dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/lightBackground" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="-45"
                              android:startColor="@color/lightBackground"
                              android:centerColor="@color/lightGrey"
                              android:endColor="@color/lightGrey"/>
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:top="1dp"
                  android:right="2dp"
                  android:bottom="2dp"
                  android:left="1dp">
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
